<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="true" android:color = "@android:color/white"
        android:drawable="@drawable/text_button_background" />
    <item
        android:state_selected="false"
        android:color = "@color/dim_gray"/>

    <item android:state_pressed="true" android:color="@android:color/white"
        android:drawable="@drawable/text_button_background"/>

    <item android:state_pressed="false" android:color="@color/dim_gray"
        />

    <item android:state_focused="true" android:color="@android:color/white"
        android:drawable="@drawable/text_button_background"/>

    <item android:state_focused="false" android:color="@color/dim_gray"
        />

</selector>